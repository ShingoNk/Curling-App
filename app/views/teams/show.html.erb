

 <section class="team">
  <div class="title-show"><p class="show-ass"><%= @team.tassoci %></p><p class="show-name"><%= @team.tname %></p></div>
    <div class="image"><%= image_tag @team.timage_url, size: "300x200" if @team.timage? %><br><br></div>
    <div class="team-container">
      <p class="left">
         チームメンバー
        <% if @lead.nil? %>
          <br>リード：未定
        <% else %>
        <br>リード：
        <%= link_to @lead.user.uname, user_path(@lead.user.id),class:"small-link2" %>
        <% end %>

        <% if @second.nil? %>
          <br>セカンド：未定
        <% else %>
        <br>セカンド：
        <%= link_to @second.user.uname, user_path(@second.user.id) ,class:"small-link2" %>
        <% end %>

        <% if @third.nil? %>
          <br>サード：未定
        <% else %>
        <br>サード：
        <%= link_to @third.user.uname, user_path(@third.user.id),class:"small-link2" %>
        <% end %>

        <% if @forth.nil? %>
          <br>フォース： 未定
        <% else %>
        <br>フォース：
        <%= link_to @forth.user.uname, user_path(@forth.user.id),class:"small-link2" %>
        <% end %>

        <% if @alter1.nil? %>
          <br>リザーブ：なし
        <% else %>
          <br>リザーブ：
          <%= link_to @alter1.user.uname, user_path(@alter1.user.id),class:"small-link2" %>
        <% end %>

        <% if @alter2.nil? %>
          <br>リザーブ：なし
        <% else %>
          <br>リザーブ：
          <%= link_to @alter2.user.uname, user_path(@alter2.user.id),class:"small-link2" %>
        <% end %>

        <% if @coach.nil? %>
          <br>コーチ：なし
        <% else %>
          <br>コーチ：
          <%= link_to @coach.user.uname, user_path(@coach.user.id),class:"small-link2" %>
        <% end %>
      </p>
      <p class="right">
        <br>種目：<%= @team.teve %>
        <br>活動拠点：<%= @team.thole %>
        <br>活動頻度：<%= @team.tfrequ %>
        <br>メンバー募集状況：<%= @team.tstatus %>
        <br>代表者氏名：
        <%= link_to @team.user.uname, user_path(@team.user.id),class:"small-link2" %>
        <br>作成日時：<%= @team.created_at %>
      </p>
    </div>
    

    


    <div>チームからのコメント<br><%= @team.tcomme %></div><br>

    

  

  <% if user_signed_in? %>
    <% if current_user.already_followed?(@team) %>
      <%= link_to team_follow_path(@team), class:"follow-link", method: :delete do  %>
         チーム所属申請取消
      <% end %>
  <% else %>
      <%= link_to team_follows_path(@team), class:"follow-link", method: :post do %>
        チーム所属申請
      <% end %>
  <% end %>

<% end %>

<% if user_signed_in? && current_user.id == @team.user_id %>
<div class="team-repre"> <br>
  <h2>代表者限定</h2>
    <div class="team-pre-b">
    <%= link_to "編集", edit_team_path(@team.id), class:"follow-link" %>
    <%= link_to "削除", team_path(@team.id), class:"delete-link", method: :delete, data: { confirm: '本当に削除しますか？'}  %>
  </div>
  <br>
  <h3>チームメンバーポジション設定</h3>
  <% @team.followed_users.each do |user| %>
  <div class="follow-edit">
    <%= link_to user.uname , user_path(user.id), class:"follow-name" %>
    <%= link_to "メンバー編集", edit_follow_path(@team,user.id), class:"follow-edit-link" %> 
  </div>

</div>


<% end %>


<% end %>

</section>

  <%= link_to "Team一覧に戻る", teams_path, class:"new-link" %>