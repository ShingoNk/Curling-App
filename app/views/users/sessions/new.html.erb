<section class="login">
<div class = "title-container-login">
<div class="title-index">ログイン</div>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, class:"form-text", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, class:"form-text", autocomplete: "current-password" %>
  </div>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶する %>
    </div>
  <% end %>

  <br>
    <%= f.submit "ログイン", class:"new-link" %>
  
<% end %>
<br>
<br>
<div class="unknown-link">
<%= render "users/shared/links" %>

</div>
</div>
</section>