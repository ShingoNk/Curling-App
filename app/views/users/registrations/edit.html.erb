<h2 class="title-top">マイページ変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :"名前" %><br />
  <%= f.text_field :uname, autofocus: true, class:"form-text" %>
  </div>  


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text" %>
  </div>


　
  <div class="field">
  <%= f.label :"性別" %><br />
  <%= f.select :usex, [["男性","男性"],["女性","女性"]], include_blank: "選択してください", autofocus: true %>
  </div>

<div class="field">
<%= f.label :"年齢" %><br />
<%= f.text_field :uage, autofocus: true, class:"uage", class:"form-short" %> 歳
</div>

<div class="field">
<%= f.label :"経験年数" %><br />
<%= f.text_field :uyoe, autofocus: true, class:"uage" , class:"form-short"%> 年
</div>

<div class="field">
<%= f.label :"活動拠点(専用リンク)" %><br />
<%= f.select :uhole, [["稚内みどりスポーツパーク","稚内みどりスポーツパーク"],["どうぎんカーリングスタジアム（札幌）","どうぎんカーリングスタジアム（札幌）"], ["アドヴィックス常呂","アドヴィックス常呂"],
["妹背牛カーリングホール","妹背牛カーリングホール"],["サンピラーパーク(名寄)","サンピラーパーク(名寄)"],
["アルゴグラフィックス北見","アルゴグラフィックス北見"],["カールプレックおびひろ","カールプレックおびひろ"],["みちぎんドリームスタジアム(青森)","みちぎんドリームスタジアム(青森)"],["盛岡市アイスリンク","盛岡市アイスリンク"],
["軽井沢アイスパーク","軽井沢アイスパーク"],["カーリングホール御代田","カーリングホール御代田"], ["カールプレックスFuji(山中湖)","カールプレックスFuji(山中湖)"]], include_blank: "選択してください", autofocus: true %>
</div>

<div class="field">
<%= f.label :"所属協会" %><br />
<%= f.select :uassoci, [["帯広","帯広"],["妹背牛","妹背牛"],["北見","北見"],["稚内","稚内"],["札幌","札幌"],["青森","青森"],["宮城","宮城"],
["岩手","岩手"],["山梨","山梨"],["東京","東京"],["神奈川","神奈川"],["群馬","群馬"],["千葉","千葉"],["御代田","御代田"],["軽井沢","軽井沢"], ["新潟","新潟"],
["富山","富山"],["京都","京都"],["岡山","岡山"],["広島","広島"],["福岡","福岡"],["熊本","熊本"]], include_blank: "選択してください",autofocus: true %>
</div>

<div class="field">
<%= f.label :"活動頻度" %><br />
<%= f.select :ufrequ, [["週2回以上","週2回以上"],["週1回","週1回"],["月2~3回","月2~3回"],["月1回","月1回"],["2，3ヶ月に1回","2，3ヶ月に1回"],["半年に1回程度","半年に1回程度"]],include_blank: "選択してください",autofocus: true %>
</div>

<div class="field">
<%= f.label :"チーム参加希望" %><br />
<%= f.select :ustatus, [["はい","はい"],["いいえ","いいえ"]], autofocus: true %>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :変更後のパスワード %> <i>(変更する必要がない場合は空欄)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-text"%>
    <% if @minimum_password_length %>
      <br>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :変更後のパスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-text" %>
  </div>

  <div class="field">
    <%= f.label :現在パスワード %> <i>(マイページ変更の際は必須です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class:"form-text"%>
  </div>

  
    <%= f.submit "更新", class:"new-link"%>
  
<% end %>

<h3>アカウントを削除する</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
