<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
<body>
    <header class="header-nav">
    <nav><a href="#first-block"></a></nav>
    </header>

    <section id="first-block">
    <div class="title-container">
    <div class="title-text">
      マイページ<br>
      個人情報の確認及び編集が行えます 
    </div>
    </div>
  </section>
<p>名前 : <%= @user.uname %></p>
<p>性別 : <%= @user.usex %></p>
<p>年齢 : <%= @user.uage %></p>
<p>経験年数 : <%= @user.uyoe %></p>
<p>活動ホール: <%= @user.uhole %></p>
<p>所属協会: <%= @user.uassoci %></p>
<p>活動頻度 : <%= @user.ufrequ %></p>
<p>チーム所属希望 : <%= @user.ustatus %></p>


<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
  <h3>チャット一覧</h3>
  <% @rooms.each do |r| %>
    <% r.users.each do |u| %>
     <% if u.id == current_user.id %>
     <% else %>
        <p><a href="/rooms/<%= r.id %>"><%= u.uname %>さんとのチャット</a></p>
     <% end %>
    <% end %> 
  <% end %>
<% else %>
  <% if @isRoom == true %>
      <p><%= link_to 'DMへ', room_path(@roomId) %></p>
  <% else %>
      <%= form_for @room do |f| %>
          <%= fields_for @entry do |e|%>
              <% e.hidden_field :user_id, value: @user.id %>
          <% end %>
      <%= f.submit "DMを開始する"%>
      <% end %>
  <% end %>
<% end %>