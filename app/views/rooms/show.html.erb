<div class="user-in">
<% @entries.each do |e| %>
    <h3><strong>
    <% if current_user.id != e.user_id %>
    <a href="/users/<%= e.user.id %>"><%= e.user.uname%></a></strong>さんとのDM</h3>
    <% end %>

<% end %>
</div>

<div class="dmMain">
    <% @messages.each do |m| %>
        <strong><%= m.body %></strong>

        <% if current_user.id != m.user_id %>
        <small><%= m.user.uname %>さん</small>
        <% else %>
        <small>自分</small>
        <% end %>
        <small><%= m.created_at %></small><hr>


    <% end %>

    <%= form_for @message do |f| %>
    <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 100 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "送信する" %>
    <% end %>
</div>

<%= link_to "マイページへ戻る", user_path(current_user.id) %>


<style>
.user-in{
    text-align:center;
    border:1px solid darkgray;
    background-color:gainsboro;
}
.dmMain{
    padding:30px;
    border:1px solid darkgray;
    background-color:gainsboro;
}
</style>